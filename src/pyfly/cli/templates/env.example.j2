# {{ name }} environment variables

PYFLY_APP_NAME={{ name }}
{% if has_web or archetype in ("web-api", "hexagonal", "core") %}
PYFLY_WEB_PORT=8080
{% endif %}
{% if has_data %}
DATABASE_URL=postgresql+asyncpg://localhost:5432/{{ package_name }}
{% endif %}
{% if has_cache %}
REDIS_URL=redis://localhost:6379/0
{% endif %}
{% if has_security %}
JWT_SECRET=change-me-in-production
{% endif %}
