# {{ name }} environment variables

PYFLY_APP_NAME={{ name }}
{% if has_web or archetype in ("web-api", "hexagonal", "core") %}
PYFLY_WEB_PORT=8080
{% endif %}
{% if has_data %}
# Data Relational — SQLite (default — zero infrastructure, works out of the box)
PYFLY_DATA_RELATIONAL_URL=sqlite+aiosqlite:///{{ package_name }}.db
# PostgreSQL (production — install pyfly[postgresql] and update pyfly.yaml)
# PYFLY_DATA_RELATIONAL_URL=postgresql+asyncpg://localhost:5432/{{ package_name }}
{% endif %}
{% if has_mongodb %}

# Data Document — MongoDB (default: localhost)
PYFLY_DATA_DOCUMENT_URI=mongodb://localhost:27017
PYFLY_DATA_DOCUMENT_DATABASE={{ package_name }}
{% endif %}
{% if has_eda %}

# Messaging (default: in-memory event bus)
PYFLY_MESSAGING_PROVIDER=memory
# Kafka (production — uncomment):
# PYFLY_MESSAGING_PROVIDER=kafka
# PYFLY_MESSAGING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
{% endif %}
{% if has_cache %}

# Cache (default: in-memory)
PYFLY_CACHE_PROVIDER=memory
# Redis (production — uncomment):
# PYFLY_CACHE_PROVIDER=redis
# PYFLY_CACHE_REDIS_URL=redis://localhost:6379/0
{% endif %}
{% if has_security %}
JWT_SECRET=change-me-in-production
{% endif %}
