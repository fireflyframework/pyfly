[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ name }}"
version = "0.1.0"
{% if archetype == "library" %}
description = "{{ name }} — PyFly library"
{% elif archetype == "cli" %}
description = "{{ name }} — PyFly CLI application"
{% elif archetype == "web" %}
description = "{{ name }} — PyFly web application"
{% elif archetype == "fastapi-api" %}
description = "{{ name }} — PyFly FastAPI application"
{% else %}
description = "{{ name }} — built with PyFly"
{% endif %}
requires-python = ">=3.12"
dependencies = [
{% if has_web and has_fastapi %}
    "pyfly[web-fastapi{% for f in features if f not in ('web', 'fastapi') %},{{ f }}{% endfor %}]",
{% elif features %}
    "pyfly[{{ features | join(',') }}]",
{% else %}
    "pyfly",
{% endif %}
{% if archetype == "web" %}
    "jinja2>=3.1",
{% endif %}
{% if has_fastapi %}
    "fastapi>=0.115",
{% endif %}
{% if has_granian %}
    "granian>=2.6",
{% endif %}
{% if has_hypercorn %}
    "hypercorn>=0.17",
{% endif %}
]

[project.optional-dependencies]
dev = [
    "pytest>=8.0",
    "pytest-asyncio>=0.23",
    "pytest-cov>=5.0",
    "ruff>=0.3",
    "mypy>=1.8",
]

[tool.hatch.build.targets.wheel]
packages = ["src/{{ package_name }}"]

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]
addopts = "-v --tb=short"

[tool.ruff]
target-version = "py312"
line-length = 120
