  src/{{ package_name }}/
    app.py                          # Application definition
    main.py                         # ASGI entry point (uvicorn target)
    controllers/                    # REST controllers
      health_controller.py          # Health check endpoint
      todo_controller.py            # Todo CRUD controller
    services/                       # Business logic
      todo_service.py               # Todo service
    models/                         # Pydantic models
      todo.py                       # Request/response DTOs
    repositories/                   # Data access
      todo_repository.py            # Todo repository
{% elif archetype == "web" %}
  src/{{ package_name }}/
    app.py                          # Application definition
